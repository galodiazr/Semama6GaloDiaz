<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semama6GaloDiaz.Put">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ACTUALIZAR"/>
            <Entry x:Name="codigo" Placeholder="Ingrese el ID del campo Actualizar" />
            <Entry x:Name="txtActualizar_nombre" Placeholder="Ingrese el Nombre del campo Actualizar" />
            <Entry x:Name="txtActualizar_apellido" Placeholder="Ingrese el Apellido del campo Actualizar" />
            <Entry x:Name="txtActualizar_edad" Placeholder="Ingrese el Edad del campo Actualizar" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Row="0" Grid.Column="0" Text="Actualizar"
                    x:Name="btnActualizar"
                    Clicked="btnActualizar_Clicked">
                </Button>
                <Button Grid.Row="0" Grid.Column="1" Text="Regresar"
                    x:Name="btnRegresar"
                    Clicked="btnRegresar_Clicked">
                </Button>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>